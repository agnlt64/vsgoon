{
  "name": "vsgoon",
  "displayName": "vsgoon",
  "description": "goon corner for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/agnlt64/vsgoon"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "goonView",
          "name": "Goon Corner",
          "type": "webview",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Goon Corner",
      "properties": {
        "vsgoon.allowNSFW": {
          "type": "boolean",
          "default": false,
          "description": "Allow NSFW images in the goon corner"
        },
        "vsgoon.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Displays a new image after a delay"
        },
        "vsgoon.refreshDelay": {
          "type": "number",
          "default": 5,
          "description": "Number of seconds between each new image. Not used if autoRefresh is false."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}